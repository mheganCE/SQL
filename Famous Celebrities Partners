/* Create table about the people and what they do here */

CREATE table FamousPeople (
   id INTEGER PRIMARY KEY AUTOINCREMENT, 
   fullname TEXT, 
   gender TEXT,
   age INTEGER);

INSERT INTO FamousPeople (fullname, gender, age) VALUES ("Kit Harington", "Male", 36);
